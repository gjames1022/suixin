    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--appbar颜色-->
        <item name="colorPrimary">@color/barblue</item>
        <!--顶部状态栏颜色-->
        <item name="colorPrimaryDark">@color/barblue</item>
        <!--控件被选中时颜色-->
        <item name="colorAccent">@color/barblue</item>
        <!--各个控制控件的默认颜色-->
        <item name="colorControlNormal">@color/fontcolor</item>
        <!--底部导航栏颜色-->
        <item name="android:navigationBarColor">@color/bottombargray</item>
        <!--主界面颜色-->
        <item name="android:windowBackground">@color/bodycolor</item>
        <!--隐藏actionBar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--隐藏结束-->
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal" >@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorPrimary">@color/barblue</item>
    </style>

</resources>
